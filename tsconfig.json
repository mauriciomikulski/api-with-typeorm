{
  "compilerOptions": {
    "outDir": "/dist",
    "target": "es2021",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": false,
  },
  "include": [
    "src/**/*.ts"
  ],
}